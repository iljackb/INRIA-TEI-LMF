                    <!-- JB: 'etym' should be kept within 'sense' -->
                    <!-- LMF: parallel model for expressing etymological information in LMF is based on the metamodel described in Alt (2006) -->
                    
                    
                    <attList>
                        <attDef ident="change" mode="delete"/>
